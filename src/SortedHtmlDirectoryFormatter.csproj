<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>SortedHtmlDirectoryFormatter</PackageId>
    <Authors>Wayne Wang</Authors>
    <PackageTags>Microsoft.AspNetCore.StaticFiles;SortedHtmlDirectoryFormatter;HtmlDirectoryFormatter;UseDirectoryBrowser</PackageTags>
    <Description>
      A nuget package that provides a class `SortedHtmlDirectoryFormatter` derived from `HtmlDirectoryFormatter`, which will render the file list sorted by the `LastModified` property in descending order.
    </Description>
    <TargetFrameworks>netstandard2.0;net5.0;netcoreapp3.1</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.StaticFiles" Version="2.2.0" />
  </ItemGroup>

</Project>
